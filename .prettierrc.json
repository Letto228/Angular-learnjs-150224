{
  "printWidth": 120,
  "bracketSpacing": true,
  "endOfLine": "crlf",
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "quoteProps": "as-needed",
        "trailingComma": "es5",
        "arrowParens": "always",
        "parser": "typescript",
        "bracketSpacing": true
      }
    },
    {
      "files": "*.json",
      "options": {
        "tabWidth": 4,
        "semi": true,
        "parser": "json"
      }
    },
    {
      "files": "*.html",
      "options": {
        "tabWidth": 2,
        "parser": "html"
      }
    },
    {
      "files": "*.scss",
      "options": {
        "tabWidth": 2,
        "parser": "scss"
      }
    }
  ]
}
